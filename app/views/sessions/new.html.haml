%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_tag url: 'login' do |f|
        %header
          %h1 Sign in
        %fieldset
          =f.email_field :email
          =f.password_field :password
        %fieldset.form-group.action
          =f.submit "Sign In", class: "btn btn-default"
        = link_to "Forgot Password?", new_reset_password_request_path