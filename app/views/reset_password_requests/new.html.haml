%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_tag url: reset_password_requests_path do |f|
        %header
          %h1 Reset Your Password
        %fieldset
          =f.email_field :email, label: "Email Address"
          =f.submit "Reset Password", class: "btn btn-default"